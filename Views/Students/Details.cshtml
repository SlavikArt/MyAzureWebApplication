@model WebApplication1.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<h1>Student Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.FullName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.FullName)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Email)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>
    </dl>
</div>

<div>
    <h3>Enrolled Courses</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Course</th>
                <th>Grade</th>
                <th>Enrollment Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var enrollment in Model.Enrollments)
            {
                <tr>
                    <td>@enrollment.Course.Title</td>
                    <td>@(enrollment.Grade.HasValue ? enrollment.Grade.ToString() : "Not Graded")</td>
                    <td>@enrollment.EnrollmentDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div> 