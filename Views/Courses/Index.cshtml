@model IEnumerable<WebApplication1.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Our Courses</h1>
    
    <div class="text-center mb-4">
        <a asp-action="Create" class="btn btn-primary">Add New Course</a>
        <a asp-action="Statistics" class="btn btn-success ms-2">View Statistics</a>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var course in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm hover-card">
                    <div class="card-body">
                        <h5 class="card-title">@course.Title</h5>
                        <p class="card-text code-tag">@course.CourseCode</p>
                        <p class="card-text credits-tag">@course.Credits Credits</p>
                        <div class="text-center mt-3">
                            <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-info btn-sm">View Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.2s ease-in-out;
    }
    
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1) !important;
    }
    
    .code-tag {
        font-size: 1rem;
        color: #6c757d;
    }
    
    .credits-tag {
        font-size: 1rem;
        color: #28a745;
        font-weight: 500;
    }
    
    .card {
        border-radius: 10px;
        border: none;
    }
    
    .card-title {
        color: #2c3e50;
        font-weight: 600;
    }
</style> 